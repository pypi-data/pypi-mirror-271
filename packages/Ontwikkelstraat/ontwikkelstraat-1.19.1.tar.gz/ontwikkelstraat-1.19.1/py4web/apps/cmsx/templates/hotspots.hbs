<script src="https://unpkg.com/htmx.org@1.5.0"></script>

<style>
    body {
        margin: 0;
    }

    img {
        width: 1000px;
    }

    .hotspot-container {
        position: relative; /* anders werkt absolute niet goed op children */
        display: inline-block; /* = zelfde breedte als image */
    }

    .hotspot {
        position: absolute;
        text-align: center;
        font-family: sans-serif;
    }

    .hotspot .pulse {
        background: white;
        border-radius: 360px;
        width: 15px;
        height: 15px;
        line-height: 15px;
        padding: 8px;

        animation: pulse 2s infinite;
    }

    /* Tooltip text */
    .hotspot .tooltiptext {
        visibility: hidden;
        width: 300px;
        background-color: #ff724f;
        color: #fff;
        text-align: center;
        padding: 5px;
        /*border-radius: 6px;*/

        /* Position the tooltip text - see examples below! */
        position: absolute;
        z-index: 1;
    }

    .hotspot .tooltiptext.right {
        left: 35px
    }

    .hotspot .tooltiptext.left {
        right: 35px
    }

    .hotspot .tooltiptext.down {
        top: 0;
    }

    .hotspot .tooltiptext.up {
        bottom: 0;
    }

    /* Show the tooltip text when you mouse over the tooltip container */
    .hotspot:hover .tooltiptext {
        visibility: visible;
    }

    /* tooltip arrow: */

    .tooltiptext:before {
        z-index: 1;
        border: solid 6px transparent;
        margin-top: -15px;
        content: "";
        position: absolute;

    }

    .tooltiptext.left:before {
        right: -12px;
        border-left-color: black;

    }

    .tooltiptext.right:before {
        left: -12px;
        border-right-color: black;
    }

    .tooltiptext.up:before {
        bottom: 10px;
    }

    .tooltiptext.down:before {
        top: 23px;
        /*top: 7%;*/
    }

    /* if in edit mode: */
    .tooltiptext.edit-true {
        display: none
    }


    /* https://www.florin-pop.com/blog/2019/03/css-pulse-effect/ */
    @keyframes pulse {
        0% {
            transform: scale(0.95);
            box-shadow: 0 0 0 0 rgba(255, 255, 255, 1);
        }

        70% {
            transform: scale(1);
            box-shadow: 0 0 0 10px rgba(250, 250, 250, 0.8);
        }

        100% {
            transform: scale(0.95);
            box-shadow: 0 0 0 0 rgba(0, 0, 0, 0);
        }
    }

</style>


<div hx-get="https://hetnieuwedelen.robin.edwh.nl/fragmentx/hotspots"
     hx-vars="{
     'image': 'https://www.educationwarehouse.nl/wp-content/uploads/2022/02/Screenshot-2022-02-24-at-15.23.36-2-2048x1152.png',
     'api_endpoint': 'https://robin.farm.edwh.nl'
     }"
     hx-trigger="load">
</div>