<div id="vraag"
     class="vraag"
>
    <section class="section pt-0">
        <div class="voortgang columns is-multiline is-mobile is-justify-content-center">
            {{#each beantwoord}}
                <div class="beantwoord column is-1 my-2 mx-2"></div>{{/each}}
            {{#each onbeantwoord}}
                <div class="onbeantwoord is-1 column my-2 mx-2"></div>{{/each}}
        </div>
    </section>
    <section class="section">
        <div class="container is-max-desktop">
            <h3 class="title is-4 mb-6" style="color: #262626!important;">Vraag {{vraag}}: {{vraag_object.vraag}}</h3>

            <br />
            {{#each vraag_object.antwoorden}}
            <div class="field">
            <div class="control">
                <div class="columns is-mobile">
                    <div class="column is-narrow mr-6 box mb-0 has-text-centered is-flex is-align-items-center">
                        <input class="radio my-3 mx-3"
                               name="{{../vraag_id}}"
                               type="radio"
                               value="{{optie}}"
                               id="antwoord-{{optie}}"
                               hx-post="{{../volgende_vraag_url}}"
                               hx-target="#vraag"
                               hx-swap="outerHTML"
                        >
                    </div>
                    <div class="column box is-flex is-align-items-center px-5">
                        <label class="title is-6" style="color: #262626" for="antwoord-{{optie}}">
                            {{antwoord}}</label>
                    </div>
                </div>
                <br />
            {{/each}}
            <div class="buttons is-right">
                {{#unless first_question}}
                    <button class="button" hx-post="{{vorige_vraag_url}}"
                            hx-target="#vraag"
                            hx-swap="outerHTML">Vorige vraag
                    </button>
                {{/unless}}
                <button class="button" hx-post="{{restart_url}}"
                        hx-target="#vraag"
                        hx-swap="outerHTML"
                        hx-confirm="Weet je zeker dat je opnieuw wilt beginnen?"
                >Begin opnieuw
                </button>
            </div>

        </div>
        </div>
        </div>
    </section>
</div>