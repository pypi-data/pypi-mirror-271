<!doctype html>
<html lang="en">

<head>
  {% with title=blog_post.title %}
  {% include "head_common.html.j2" %}
  {% endwith %}

  {% if blog_post.description -%}
  <meta name="description" content="{{ blog_post.description }}">
  {% endif -%}
  <meta name="author" content="{{ blog_post.author }}">
  <meta property="article:published_time" content="{{ blog_post.creation_dt.isoformat() }}">
  <meta property="article:modified_time" content="{{ blog_post.last_update_dt.isoformat() }}">
</head>

<body>
  <header>
    {% with author_name=blog_post.author %}
    {% include "navbar.html.j2" %}
    {% endwith %}
    <h1>{{ blog_post.title }}</h1>
    <p>
      {% if blog_post.description -%}
      {{ blog_post.description }}<br />
      {%- endif %}
      <small>
        Last updated on {{ blog_post.human_time }}
      </small>
    </p>
  </header>
  <main>
    {{ main_content }}
  </main>
  {% with author_name=blog_post.author %}
  {% include "footer.html.j2" %}
  {% endwith %}
</body>

</html>