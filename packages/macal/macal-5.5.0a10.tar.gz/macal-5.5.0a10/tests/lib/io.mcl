# Macal DSL IO Library

const io = object {
    name: "io",
    version: "5.5.0",
    author: "Marco Caspers",
    email: "SamaDevTeam@westcon.com",
    license: "MIT",
    description: "This is the Macal DSL 5.5 IO Library",
    external_module: "ext_io.py"
};


LoadTextFile => (filename) external "ext_io", "loadTextFile";
LoadJSONFile => (filename) external "ext_io", "readJSONFile";
Exists => (filename) external "ext_io", "existsFile";
SaveTextFile => (filename, content) external "ext_io", "saveTextFile";
SaveJSONFile => (filename, content) external "ext_io", "writeJSONFile";
GetLastRun => (name, defaultIsoNow) external "ext_io", "getLastRun";
SetLastRun => (name, isoNow) external "ext_io", "setLastRun";
Pwd => () external "ext_io", "getPwd";
