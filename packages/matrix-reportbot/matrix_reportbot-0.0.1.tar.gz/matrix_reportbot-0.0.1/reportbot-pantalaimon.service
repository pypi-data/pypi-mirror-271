[Unit]
Description=Pantalaimon for ReportBot
Requires=network.target

[Service]
Type=simple
User=reportbot
Group=reportbot
WorkingDirectory=/opt/reportbot
ExecStart=/opt/reportbot/venv/bin/python3 -um pantalaimon.main -c pantalaimon.conf
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target